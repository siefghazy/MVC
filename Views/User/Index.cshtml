@using compant.Data.Models
@model IEnumerable<ApplicationUser>
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2">
        <div class="col-8 ">
            <input type="text" class="form-control" name="searchInput" placeholder="searchByEmail" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="=btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.UserName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.UserName</td>
                    <td>@department.Email</td>
                    <td>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Users :(</h4>
    </div>
}
