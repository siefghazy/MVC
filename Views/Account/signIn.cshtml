
@{
    ViewData["Title"] = "signIn";
    Layout = "~/Views/Shared/_authLayout.cshtml";
}
@model SignUpViewModel
<h2 class="form-title">Sign In</h2>
<div class="main-agileinfo">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="agileits-top"></div>
    <form asp-action="signIn">
        <input type="text" asp-for="Email" placeholder="Email" required class="form-control" />
        <input type="text" asp-for="password" placeholder="password" required class="form-control" />
        <div class="wthree-text">
            <label class="anim">
            </label>
            <div class="clear"> </div>
        </div>
        <input type="submit" value="signIn" />
    </form>
    <p>Don't have account ? <a asp-action="signUp">signUp</a></p>
</div>