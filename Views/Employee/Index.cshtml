@using company.Services.Dto
@model IEnumerable<EmployeeDto>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add employee</a>
<br />
<br />
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2">
        <div class="col-8 ">
            <input type="text" class="form-control" name="searchInput" placeholder="searchByName" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="=btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
               
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Image)</th>
                <th>@Html.DisplayNameFor(D => D.email)</th>
                <th>@Html.DisplayNameFor(D => D.address)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.salary)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>
                        <img src="~/files/images/@department.ImageURl" height ="40" width="40" class="rounded-circle">
                     </td>
                    <td>@department.email</td>
                    <td>@department.address</td>
                    <td>@department.Age</td>
                    <td>@department.salary</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@department.ID" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@department.ID" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@department.ID" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No employees :(</h4>
    </div>
}
